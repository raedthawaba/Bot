# متغيرات البيئة - يجب نسخ هذا الملف إلى .env وتعديل القيم

# إعدادات البيئة
ENVIRONMENT=development
DEBUG=true

# إعدادات الخادم
HOST=0.0.0.0
PORT=8000

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///./teledroid.db

# إعدادات Redis (اختياري)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# إعدادات Telegram Bot (مطلوب)
# احصل على التوكن من @BotFather في Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# إعدادات OpenAI (اختياري - للذكاء الاصطناعي)
# احصل على المفتاح من https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# إعدادات الأمان (مطلوب - تغيير في الإنتاج)
SECRET_KEY=your-very-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# قائمة المستخدمين المسموح لهم (اختياري)
# أدخل معرفات Telegram للمستخدمين المسموح لهم
# مثال: ALLOWED_USERS="[123456789, 987654321]"
ALLOWED_USERS=[]

# إعدادات الملفات
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# إعدادات Webhook (اختياري)
WEBHOOK_URL=
USE_WEBHOOK=false
